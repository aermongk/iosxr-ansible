from ansible.module_utils.basic import *
from ansible.module_utils.shell import *

DOCUMENTATION = """
---
module: iosxr_get_config
author: Adisorn Ermongkonchai
short_description: show running-config
description:
  - Get running configuration from IOS-XR node.
"""

EXAMPLES = """
- iosxr_get_config:
"""

RETURN = """
stdout:                               
  description: raw response
  returned: always
stdout_lines:   
  description: list of response lines
  returned: always
"""

def main():
    module = AnsibleModule(
        argument_spec = dict(
            data=dict(required=False, default=None),
        ),
        supports_check_mode = True
    )
    result = dict(changed=False)
    command = 'source /etc/profile ; nsenter -t 1 -n -- xr_cli "show run"'
    (rc, out, err) = module.run_command(command, use_unsafe_shell=True)

    result['stdout'] = out
    return module.exit_json(**result)

if __name__ == "__main__":
    main()
