from ansible.module_utils.basic import *

DOCUMENTATION = """
---
module: iosxr_cli
author: Adisorn Ermongkonchai
short_description: Run a command on IOS-XR devices.
description:
  - Run an IOS-XR CLI command
options:
  command:
    description:
      - IOS-XR CLI command string
    required: true
"""

EXAMPLES = """
- iosxr_cli:
    command: 'show version'
"""

RETURN = """
stdout:                               
  description: raw response
  returned: always
stdout_lines:   
  description: list of response lines
  returned: always
"""

def main():
    module = AnsibleModule(
        argument_spec = dict(
            command=dict(required=True),
        ),
        supports_check_mode = True
    )
    command = 'source /etc/profile ; nsenter -t 1 -n -- xr_cli "%s"' % \
              module.params['command']
    (rc, out, err) = module.run_command(command, use_unsafe_shell=True)
  
    result = dict(changed=False)
    result['stdout'] = out if out != "" else err
    return module.exit_json(**result)

if __name__ == "__main__":
  main()
