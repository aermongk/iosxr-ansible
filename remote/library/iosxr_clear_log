#------------------------------------------------------------------------------

from ansible.module_utils.basic import *

DOCUMENTATION = """
---
module: iosxr_clear_log
author: Adisorn Ermongkonchai
short_description: Clear log
description:
  - Clear system log
"""

EXAMPLES = """
- iosxr_clear_log:
"""

RETURN = """
stdout:                               
  description: raw response
  returned: always
stdout_lines:   
  description: list of response lines
  returned: always
"""

def main():
    module = AnsibleModule(
        argument_spec = dict(
            data=dict(required=False, default=None),
        ),
        supports_check_mode = True
    )
  
    command = '/bin/echo yes > yes'
    (rc, out, err) = module.run_command(command, use_unsafe_shell=True)
    command = 'source /etc/profile ; nsenter -t 1 -n -- clr_logging < yes'
    (rc, out, err) = module.run_command(command, use_unsafe_shell=True)
  
    result = dict(changed=True)
    result['stdout'] = out if out != "" else err
    return module.exit_json(**result)

if __name__ == "__main__":
    main()
